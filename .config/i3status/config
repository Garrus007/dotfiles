general {
        colors = true
        interval = 5
}

order += "volume master"
order += "wireless _first_"
order += "cpu_usage"
order += "memory"
order += "disk /"
order += "tztime local"

volume master {
        device = "pulse:1"
        format = "ðŸ”Š %volume"
        format_muted = "ðŸ”ˆ"
}

wireless _first_ {
        format_up = "W: %essid %quality (%ip)"
        format_down = "W: down"
}

load {
        format = "%1min"
}

cpu_usage {
        format = "CPU: %usage"
}

memory {
        format = "MEM: %percentage_used"
}

disk "/" {
        format = "%avail"
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}
